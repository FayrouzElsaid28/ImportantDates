<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/empty_data_txt"
        android:text="@string/attention"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/me_partner_layout"
        android:weightSum="2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/empty_data_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Partner-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/partner_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/category_partner_background"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/partner_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:src="@mipmap/wifess"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:text="@string/wife_data"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/wife_txt_color"
                app:layout_constraintTop_toBottomOf="@id/partner_img"
                app:layout_constraintEnd_toEndOf="@id/partner_img"
                app:layout_constraintStart_toStartOf="@id/partner_img"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Me-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/personal_layout"
            android:background="@drawable/category_me_background"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/me_img"
                android:src="@mipmap/mydataa"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:text="@string/personal_data"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/personal_txt_color"
                app:layout_constraintTop_toBottomOf="@id/me_img"
                app:layout_constraintStart_toStartOf="@id/me_img"
                app:layout_constraintEnd_toEndOf="@id/me_img"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/me_partner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Servant-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/servant_layout"
            android:background="@drawable/category_servant_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/servant_img"
                android:src="@mipmap/maids"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:text="@string/serant_data"
                android:textColor="@color/servant_txt_color"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/servant_img"
                app:layout_constraintEnd_toEndOf="@id/servant_img"
                app:layout_constraintStart_toStartOf="@id/servant_img"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Kids-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kids_layout"
            android:background="@drawable/category_kids_background"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/kids_img"
                android:src="@mipmap/sonss"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:text="@string/kid_data"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/kids_txt_color"
                app:layout_constraintTop_toBottomOf="@id/kids_img"
                app:layout_constraintEnd_toEndOf="@id/kids_img"
                app:layout_constraintStart_toStartOf="@id/kids_img"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>