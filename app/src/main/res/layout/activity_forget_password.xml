<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.registration.login.ForgetPasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Header-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:background="@mipmap/top_header"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/back"
            android:padding="15dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/forget_password_tv"
            android:text="@string/forget"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="21sp"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintEnd_toStartOf="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--Body-->
        <ImageView
            android:id="@+id/forget_password_img"
            android:src="@mipmap/forget_password"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="125dp"
            android:layout_height="125dp"/>
        <TextView
            android:id="@+id/forget_password"
            android:text="@string/forget_password"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/forget_password_img"
            app:layout_constraintEnd_toEndOf="@id/forget_password_img"
            app:layout_constraintStart_toStartOf="@id/forget_password_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/forget_password_txt"
            app:layout_constraintTop_toBottomOf="@id/forget_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/forget_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <!--Email-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/forget_password_email_layout"
            android:background="@drawable/not_active_edittext_background"
            app:layout_constraintTop_toBottomOf="@id/forget_password_txt"
            android:layout_marginTop="26sp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/forget_password_email_img"
                android:src="@mipmap/email"
                android:padding="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/email_et"
                android:background="@color/transparent"
                android:hint="roqay@mail.com"
                android:inputType="textEmailAddress"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/forget_password_email_img"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/forget_password_email_txt"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/forget_password_email_layout"
            app:layout_constraintTop_toBottomOf="@id/forget_password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_send"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/button_background"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@id/forget_password_email_layout"
            app:layout_constraintEnd_toEndOf="@id/forget_password_email_layout"
            app:layout_constraintTop_toBottomOf="@id/forget_password_email_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="50dp"/>

        <ProgressBar
            android:id="@+id/loading"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>